<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup.SignupActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/signup_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            app:tint="@android:color/holo_purple" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:fontFamily="@font/hangulnuri"
            android:gravity="center_vertical"
            android:text="회원가입"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:id="@+id/textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/btn_dupli_check"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FA9898"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="40dp"
            android:text="중복검사" />


    </LinearLayout>

    <TextView
        android:id="@+id/text_dupli_check"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="중복검사를 해주세요."
        android:textSize="18sp" />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/textPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
         />

    <EditText
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="NAME"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
       />

    <Button
        android:id="@+id/btn_signup_finish"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FA9898"
        android:text="회원가입" />

    <Button
        android:id="@+id/btn_signup_cancle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#9A9A9A"
        android:text="취소" />

</LinearLayout>