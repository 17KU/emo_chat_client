<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.konkuk17.messenger_example.Chat.ChatFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/yellow_star" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="ID"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hangeulnurib"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/setting_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="10dp"
                    android:text="아이디"
                    android:fontFamily="@font/hangulnuri"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="NAME"
                    android:fontFamily="@font/hangeulnurib"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/setting_et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ems="7"
                    android:hint="이름을 입력하세요"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/setting_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="10dp"
                    android:text="이름"
                    android:fontFamily="@font/hangulnuri"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/setting_btn_name_change"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_toRightOf="@+id/account_iv_profile"

            android:backgroundTint="#d499d4"
            android:fontFamily="@font/hangeulnurib"
            android:padding="10dp"

            android:text="이름 변경"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/setting_btn_pwd_change"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_toRightOf="@+id/account_iv_profile"
            android:backgroundTint="#d499d4"
            android:fontFamily="@font/hangeulnurib"
            android:padding="10dp"
            android:text="비번 변경"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>

    <Button
        android:id="@+id/setting_btn_logout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/account_iv_profile"
        android:backgroundTint="#e2cce7"
        android:padding="10dp"
        android:text="로그아웃"
        android:fontFamily="@font/hangeulnurib"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>


